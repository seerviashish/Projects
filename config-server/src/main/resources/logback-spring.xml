<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <springProfile name="production">
        <property name="log.dir" value="${LOG_PATH}"/>
        <property name="logfile.name" value="config-server"/>

        <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <File>${log.dir}${logfile.name}.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${log.dir}${logfile.name}.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>7</maxHistory>
                <totalSizeCap>10GB</totalSizeCap>
            </rollingPolicy>

            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} [%thread] - %msg%n</pattern>
            </encoder>
        </appender>
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>
                    %d{HH:mm:ss.SSS} %-5level %logger{36} [%thread] %X{request_id} - %msg%n
                </Pattern>
            </layout>
        </appender>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.cache" level="TRACE"/>
        <logger name="com.projects.spring" level="DEBUG"/>
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="ROLLING"/>
        </root>
    </springProfile>
    <springProfile name="local">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>
                    %d{HH:mm:ss.SSS} %-5level %logger{36} [%thread] %X{request_id} - %msg%n
                </Pattern>
            </layout>
        </appender>
        <logger name="org.springframework" level="DEBUG"/>
        <logger name="org.springframework.cache" level="TRACE"/>
        <logger name="com.projects.spring" level="ERROR"/>
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>
</configuration>